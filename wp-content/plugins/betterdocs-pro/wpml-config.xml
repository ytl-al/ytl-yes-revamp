<wpml-config>
    <taxonomies>
        <taxonomy translate="1">knowledge_base</taxonomy>
    </taxonomies>
    <custom-term-fields>
        <custom-term-field action="copy">kb_order</custom-term-field>
        <custom-term-field action="copy">knowledge_base-image-id</custom-term-field>
    </custom-term-fields>
    <admin-texts>
        <key name="theme_mods_*">
            <key name="betterdocs_post_reactions_text" />
            <key name="betterdocs_archive_other_categories_heading_text" />
            <key name="betterdocs_archive_other_categories_load_more_text" />
        </key>
        <key name="betterdocs_settings">
            <key name="betterdocs_popular_docs_text" />
            <key name="home_content_title" />
            <key name="home_content_subtitle" />
            <key name="search_not_found_1" />
            <key name="search_not_found_2" />
            <key name="chat_tab_title" />
            <key name="chat_subtitle_one" />
            <key name="chat_subtitle_two" />
            <key name="ia_resources_general_content_title" />
            <key name="ia_resource_general_tab_title" />
            <key name="ia_resources_doc_category_title_text" />
            <key name="ia_resources_faq_title" />
            <key name="ask_thanks_title" />
            <key name="ask_thanks_text" />
            <key name="search_placeholder_text" />
            <key name="reaction_title" />
            <key name="response_title" />
            <key name="chat_subtitle_two" />
            <key name="home_docs_text"/>
        </key>
    </admin-texts>
    <elementor-widgets>
        <widget name="betterdocs-reactions">
            <conditions>
                <condition key="widgetType">betterdocs-reactions</condition>
            </conditions>
            <fields>
                <field type="Doc Reactions: Text" editor_type="LINE">reaction_text</field>
            </fields>
        </widget>
        <widget name="betterdocs-attachment">
            <conditions>
                <condition key="widgetType">betterdocs-attachment</condition>
            </conditions>
            <fields>
                <field type="Betterdocs Attachment: Label Text" editor_type="LINE">attachment_label_text</field>
            </fields>
        </widget>
        <widget name="betterdocs-related-docs">
            <conditions>
                <condition key="widgetType">betterdocs-related-docs</condition>
            </conditions>
            <fields>
                <field type="Betterdocs Related Docs: Text Heading" editor_type="LINE">related_docs_heading</field>
            </fields>
        </widget>
    </elementor-widgets>
</wpml-config>
